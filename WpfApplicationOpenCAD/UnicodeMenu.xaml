<ContentControl x:Class="WpfApplicationOpenCAD.UnicodeMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplicationOpenCAD"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="150">
    <Grid>
        <ListBox Name="ResultsListBox"
                 Margin="0 17 0 0"
                 Background="#222" Foreground="#ddd"
                 BorderThickness="0">
        </ListBox>
        <TextBox Name="SearchTextBox"
                 VerticalAlignment="Top"
                 Height="17"
                 Panel.ZIndex="1000"
                 BorderThickness="0" Background="Transparent">
            <TextBox.Effect>
                <DropShadowEffect Color="Blue" BlurRadius="4" ShadowDepth="2" Direction="-90"></DropShadowEffect>
            </TextBox.Effect>
        </TextBox>
    </Grid>
</ContentControl>